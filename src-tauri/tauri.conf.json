{
  "build": {
    "beforeDevCommand": "pnpm vite:dev ",
    "beforeBuildCommand": "pnpm vite:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },

  "package": {
    "productName": "file-list-rs",
    "version": "0.1.0"
  },

  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true
      }
    },

    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],

      "identifier": "com.scboy.file-list",
      "targets": [ "appimage", "msi","dmg"]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "file-list-rs",
        "width": 1000,
        "height": 800
      }
    ]
  }
}
